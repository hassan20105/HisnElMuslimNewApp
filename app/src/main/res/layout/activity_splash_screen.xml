<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splachapp"
    android:orientation="vertical"
    android:theme="@style/AppTheme2"
    android:gravity="center"
    tools:context="com.hisnElMuslem.myapplication.Activities.SplashScreenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center|start"
        android:orientation="horizontal">

        <Button
            android:id="@+id/readBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:alpha="0.8"
            android:background="@drawable/yellow_rectangle_layout"
            android:drawableBottom="@drawable/book"
            android:drawablePadding="2dp"
            android:onClick="onclick"
            android:shadowColor="#FEFDC9"
            android:text="قراءة الاذكار"
            android:textColor="#88000A" />

    <Button
        android:id="@+id/videoBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:background="@drawable/yellow_rectangle_layout"
        android:drawableBottom="@drawable/video"
        android:drawablePadding="2dp"
        android:onClick="onclick"
        android:layout_marginStart="15dp"
        android:shadowColor="#FEFDC9"
        android:text="سماع الاذكار"
        android:textColor="#88000A"
       />
    </LinearLayout>
</LinearLayout>
